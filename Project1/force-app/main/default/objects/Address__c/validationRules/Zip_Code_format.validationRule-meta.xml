<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Zip_Code_format</fullName>
    <active>true</active>
    <description>Standard Zip Code Format</description>
    <errorConditionFormula>NOT (REGEX(Zip_Code__c,&quot;\\d{5}(-\\d{4})?&quot;))</errorConditionFormula>
    <errorDisplayField>Zip_Code__c</errorDisplayField>
    <errorMessage>Incorrect Zip Code Format either 12345 or 12345-1234</errorMessage>
</ValidationRule>
